@using Shop.Core.Domain;
@model List<Product>

<div class="row">
    <div class="col-lg-12">
        <h1>Products</h1>
        <ul>
            @foreach(var product in Model)
            {
                <a href="#" title="Add to cart" class="list-group-item list-group-item-action">@product.Name [@product.Price PLN], category: @product.Category +</a>        
            }
        </ul>
    </div>
</div>
