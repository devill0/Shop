@model IEnumerable<ProductViewModel>

<div class="row">
    <div class="col-lg-12">
        <a asp-area="" asp-action="AddProduct" class="btn btn-primary">Add product</a>        
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h1>Products</h1>
        <ul>
            @foreach(var product in Model)
            {
                <a href="#" title="Add to cart" class="list-group-item list-group-item-action">@product.Name [@product.Price PLN] +</a>        
            }
        </ul>
    </div>
</div>
